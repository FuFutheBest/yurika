import ImageWrapper from "../components/misc/ImageWrapper.astro";
import { siteConfig } from "../config";
import localBooksList from "../data/books";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

// 检查书籍页面是否启用
if (!siteConfig.featurePages.books) {
	return Astro.redirect("/404/");
}

// Bangumi API配置
const BANGUMI_USER_ID = siteConfig.bangumi?.userId || "your-user-id";
const BANGUMI_API_BASE = "https://api.bgm.tv";

// 获取书籍数据模式
const BOOKS_MODE = siteConfig.books?.mode || "bangumi";

// 获取单个条目相关人员信息
async function fetchSubjectPersons(subjectId: number) {
	try {
		const response = await fetch(
			`${BANGUMI_API_BASE}/v0/subjects/${subjectId}/persons`,
		);
		const data = await response.json();
		return Array.isArray(data) ? data : [];
	} catch (error) {
		console.error(`Error fetching subject ${subjectId} persons:`, error);
		return [];
	}
}

// 获取Bangumi收藏列表
async function fetchBangumiCollection(
	userId: string,
	subjectType: number,
	type: number,
) {
	try {
		let allData: any[] = [];
		let offset = 0;
		const limit = 50;
		let hasMore = true;

		while (hasMore) {
			const response = await fetch(
				`${BANGUMI_API_BASE}/v0/users/${userId}/collections?subject_type=${subjectType}&type=${type}&limit=${limit}&offset=${offset}`,
			);
			if (!response.ok) {
				throw new Error(`Bangumi API error: ${response.status}`);
			}
			const data = await response.json();

			if (data.data && data.data.length > 0) {
				allData = [...allData, ...data.data];
			}
			if (!data.data || data.data.length < limit) {
				hasMore = false;
			} else {
				offset += limit;
			}
			await new Promise((resolve) => setTimeout(resolve, 100));
		}
		return { data: allData };
	} catch (error) {
		console.error("Error fetching Bangumi data:", error);
		return null;
	}
}

// 获取Bangumi数据转换为页面所需格式
async function processBangumiData(data: any, status: string) {
	if (!data || !data.data) return [];

	const detailedItems = await Promise.all(
		data.data.map(async (item: any) => {
			const subjectPersons = await fetchSubjectPersons(item.subject_id);
			const year = item.subject?.date || "Unknown";
			const rating = item.rate ? Number.parseFloat(item.rate.toFixed(1)) : 0;
			const progress = item.ep_status || 0;
			const totalVolumes = item.subject?.eps || progress;

			let author = "Unknown";
			if (Array.isArray(subjectPersons)) {
				const priorities = ["作者", "著者", "原作"];
				for (const relation of priorities) {
					const match = subjectPersons.find(
						(person) => person.relation === relation,
					);
					if (match?.name) {
						author = match.name;
						break;
					}
				}
			}

			return {
				title: item.subject?.name_cn || item.subject?.name || "Unknown Title",
				status: status,
				rating: rating,
				cover: item.subject?.images?.medium || "/assets/books/default.webp",
				description: (
					item.subject?.short_summary ||
					item.subject?.name_cn ||
					""
				).trimStart(),
				volumes: `${totalVolumes} volumes`,
				year: year,
				genre: item.subject?.tags
					? item.subject.tags.slice(0, 3).map((tag: any) => tag.name)
					: ["Unknown"],
				author: author,
				link: `https://bgm.tv/subject/${item.subject.id}` || "#",
				progress: progress,
				totalVolumes: totalVolumes,
				startDate: item.subject?.date || "",
				endDate: item.subject?.date || "",
			};
		}),
	);
	return detailedItems;
}

// 根据模式获取书籍列表
let booksList: typeof localBooksList = [];
if (BOOKS_MODE === "local") {
	booksList = localBooksList;
} else {
	// 使用Bangumi API，subjectType=1 代表书籍
	const readingData = await fetchBangumiCollection(BANGUMI_USER_ID, 1, 3);
	const completedData = await fetchBangumiCollection(BANGUMI_USER_ID, 1, 2);
	const plannedData = await fetchBangumiCollection(BANGUMI_USER_ID, 1, 1);

	const readingList = readingData
		? await processBangumiData(readingData, "reading")
		: [];
	const completedList = completedData
		? await processBangumiData(completedData, "completed")
		: [];
	const plannedList = plannedData
		? await processBangumiData(plannedData, "planned")
		: [];

	booksList = [...readingList, ...completedList, ...plannedList];
}

// 获取状态的翻译文本和样式
function getStatusInfo(status: string) {
	switch (status) {
		case "reading":
			return {
				text: i18n(I18nKey.booksStatusReading),
				class:
					"bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300",
				icon: "📖",
			};
		case "completed":
			return {
				text: i18n(I18nKey.booksStatusCompleted),
				class:
					"bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300",
				icon: "✓",
			};
		case "planned":
			return {
				text: i18n(I18nKey.booksStatusPlanned),
				class:
					"bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-300",
				icon: "⏰",
			};
		default:
			return {
				text: status,
				class: "bg-gray-100 text-gray-700 dark:bg-gray-800 dark:text-gray-300",
				icon: "?",
			};
	}
}

// 计算统计数据
const stats = {
	total: booksList.length,
	reading: booksList.filter((book) => book.status === "reading").length,
	completed: booksList.filter((book) => book.status === "completed").length,
	avgRating: (() => {
		const ratedBooks = booksList.filter((book) => book.rating > 0);
		if (ratedBooks.length === 0) return "0.0";
		return (
			ratedBooks.reduce((sum, book) => sum + book.rating, 0) / ratedBooks.length
		).toFixed(1);
	})(),
};
